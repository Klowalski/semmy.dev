---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: 'OpenClaw Memory Chain',
    description: 'Cryptographic proof system for AI agent memories. Ed25519 signed, hash-linked, anchored to Base blockchain.',
    tech: ['TypeScript', 'Ed25519', 'Base L2'],
    status: 'Active',
    statusColor: '#22d3ee',
    link: 'https://github.com/SeMmyT/openclaw-memory-chain',
    highlight: true,
  },
  {
    title: 'Govantazh',
    description: 'Multi-tenant cargo management SaaS. Real-time tracking via SSE, Telegram bot, Gmail automation.',
    tech: ['React 19', 'Hono', 'SQLite'],
    status: 'Active',
    statusColor: '#22d3ee',
    link: 'https://govantazh.com',
    highlight: false,
  },
  {
    title: 'zohcli',
    description: 'Go CLI for Zoho Mail & Admin APIs. Full OAuth2 flow, token refresh, org management.',
    tech: ['Go', 'OAuth2', 'REST'],
    status: 'Active',
    statusColor: '#22d3ee',
    link: 'https://github.com/SeMmyT/zohcli',
    highlight: false,
  },
  {
    title: 'Claude Code Skills',
    description: 'Professional skill packs for Claude Code ‚Äî TDD patterns, agent workflows, and domain toolkits.',
    tech: ['JavaScript', 'AI Agents'],
    status: 'Active',
    statusColor: '#22d3ee',
    link: 'https://github.com/SeMmyT/gsd-tdd',
    highlight: false,
  }
];
---

<BaseLayout>
  <!-- Hero -->
  <section style="max-width:1100px; margin:0 auto; padding:100px 24px 80px;">
    <div class="fade-in" style="margin-bottom:20px; display:inline-flex; align-items:center; gap:8px; background:rgba(34,211,238,0.08); border:1px solid rgba(34,211,238,0.2); border-radius:100px; padding:6px 14px;">
      <span class="pulse-dot" style="width:7px; height:7px; border-radius:50%; background:#22d3ee; display:inline-block;"></span>
      <span style="font-size:0.8rem; color:#22d3ee; font-family:'JetBrains Mono',monospace; letter-spacing:0.04em;">building in public ¬∑ Ukraine üá∫üá¶</span>
    </div>
    
    <h1 class="fade-in-delay-1" style="font-size:clamp(3rem, 8vw, 5.5rem); font-weight:900; line-height:1.05; letter-spacing:-0.03em; margin-bottom:24px;">
      <span class="gradient-text">Daniel</span><br/>
      <span style="color:#f1f5f9;">Petrushevsky</span>
    </h1>
    
    <p class="fade-in-delay-2" style="font-size:clamp(1.1rem, 2.5vw, 1.4rem); color:#64748b; max-width:580px; margin-bottom:40px; line-height:1.6;">
      Day sales, night tools builder.<br/>
      <span style="color:#94a3b8;">AI agent infrastructure, SaaS platforms, cryptographic memory systems.</span>
    </p>
    
    <div class="fade-in-delay-3" style="display:flex; gap:16px; flex-wrap:wrap;">
      <a href="/#projects" 
         style="display:inline-flex; align-items:center; gap:8px; padding:12px 24px; background:#22d3ee; color:#080810; border-radius:10px; font-weight:700; font-size:0.95rem; text-decoration:none; transition:all 0.2s; letter-spacing:-0.01em;"
         onmouseover="this.style.background='#67e8f9'; this.style.transform='translateY(-1px)'"
         onmouseout="this.style.background='#22d3ee'; this.style.transform='translateY(0)'">
        View Projects
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M7 17L17 7M17 7H7M17 7v10"/></svg>
      </a>
      <a href="/blog"
         style="display:inline-flex; align-items:center; gap:8px; padding:12px 24px; border:1px solid rgba(255,255,255,0.12); color:#94a3b8; border-radius:10px; font-weight:600; font-size:0.95rem; text-decoration:none; transition:all 0.2s;"
         onmouseover="this.style.borderColor='rgba(34,211,238,0.4)'; this.style.color='#22d3ee'; this.style.transform='translateY(-1px)'"
         onmouseout="this.style.borderColor='rgba(255,255,255,0.12)'; this.style.color='#94a3b8'; this.style.transform='translateY(0)'">
        Read Blog
      </a>
    </div>
  </section>

  <!-- Stats bar -->
  <section style="max-width:1100px; margin:0 auto; padding:0 24px 80px;">
    <div style="display:grid; grid-template-columns:repeat(auto-fit, minmax(160px, 1fr)); gap:1px; background:rgba(255,255,255,0.06); border-radius:16px; overflow:hidden;">
      {[
        { label: 'Projects shipped', value: '10+' },
        { label: 'Years building', value: '5+' },
        { label: 'Coffee consumed', value: '‚àû' },
        { label: 'Stack preference', value: 'TypeScript' },
      ].map(stat => (
        <div style="background:#080810; padding:24px 28px; transition:background 0.2s;"
             onmouseover="this.style.background='rgba(34,211,238,0.03)'"
             onmouseout="this.style.background='#080810'">
          <div style="font-size:1.6rem; font-weight:800; color:#f1f5f9; letter-spacing:-0.02em; margin-bottom:4px;">{stat.value}</div>
          <div style="font-size:0.8rem; color:#475569; font-family:'JetBrains Mono',monospace;">{stat.label}</div>
        </div>
      ))}
    </div>
  </section>

  <!-- Projects -->
  <section id="projects" style="max-width:1100px; margin:0 auto; padding:0 24px 80px;">
    <div style="display:flex; align-items:baseline; gap:16px; margin-bottom:48px;">
      <h2 style="font-size:2rem; font-weight:800; letter-spacing:-0.03em; color:#f1f5f9;">Featured Projects</h2>
      <span style="font-size:0.8rem; font-family:'JetBrains Mono',monospace; color:#334155; padding:2px 10px; background:rgba(255,255,255,0.03); border:1px solid rgba(255,255,255,0.06); border-radius:100px;">{projects.length} active</span>
    </div>
    
    <div style="display:grid; grid-template-columns:repeat(auto-fit, minmax(300px, 1fr)); gap:16px;">
      {projects.map((project) => (
        <a href={project.link} target="_blank" rel="noopener noreferrer"
           class="card-hover"
           style="display:block; padding:28px; border-radius:16px; text-decoration:none; position:relative; overflow:hidden;">
          {project.highlight && (
            <div style="position:absolute; top:0; left:0; right:0; height:1px; background:linear-gradient(90deg, transparent, #22d3ee, transparent);"></div>
          )}
          <div style="display:flex; justify-content:space-between; align-items:flex-start; margin-bottom:12px;">
            <h3 style="font-size:1.05rem; font-weight:700; color:#f1f5f9; letter-spacing:-0.02em; line-height:1.3;">{project.title}</h3>
            <span style={`font-size:0.7rem; padding:3px 10px; border-radius:100px; background:rgba(34,211,238,0.1); color:${project.statusColor}; border:1px solid rgba(34,211,238,0.2); font-family:'JetBrains Mono',monospace; white-space:nowrap; margin-left:12px; flex-shrink:0;`}>
              ‚óè {project.status}
            </span>
          </div>
          <p style="font-size:0.9rem; color:#64748b; margin-bottom:20px; line-height:1.6;">{project.description}</p>
          <div style="display:flex; flex-wrap:wrap; gap:6px; align-items:center;">
            {project.tech.map(t => (
              <span class="tech-tag">{t}</span>
            ))}
            <span style="margin-left:auto; color:#334155; font-size:0.8rem; transition:color 0.2s;">‚Üó</span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- Currently Building -->
  <section style="max-width:1100px; margin:0 auto; padding:0 24px 80px;">
    <hr class="divider" style="margin-bottom:64px;" />
    
    <h2 style="font-size:2rem; font-weight:800; letter-spacing:-0.03em; color:#f1f5f9; margin-bottom:48px;">What I'm Building Now</h2>
    
    <div style="display:grid; gap:24px;">
      {[
        {
          tag: 'WITNESS Protocol',
          title: 'Cryptographic AI Memory',
          desc: "Every agent memory timestamped, Ed25519 signed, hash-linked into a chain, optionally anchored to Base L2. Provable history for autonomous agents.",
          accent: '#22d3ee',
        },
        {
          tag: 'SaaS',
          title: 'Govantazh ‚Äî Cargo Platform',
          desc: "Multi-tenant architecture on SQLite/Kysely. SSE real-time updates, Telegram bot for field workers, automated Gmail parsing. Built for Ukrainian logistics.",
          accent: '#818cf8',
        },
        {
          tag: 'OpenClaw',
          title: 'Agent Skill Ecosystem',
          desc: "Building professional skill packs that turn AI agents into domain experts. Contributing to the OpenClaw/ClawHub ecosystem.",
          accent: '#e879f9',
        }
      ].map((item, i) => (
        <div class="card-hover" style={`padding:28px 32px; border-radius:16px; display:flex; gap:24px; align-items:flex-start; animation-delay:${i * 0.1}s;`}>
          <div style={`width:3px; border-radius:2px; background:${item.accent}; flex-shrink:0; align-self:stretch; opacity:0.6;`}></div>
          <div>
            <span style={`font-size:0.7rem; font-family:'JetBrains Mono',monospace; color:${item.accent}; letter-spacing:0.1em; text-transform:uppercase; display:block; margin-bottom:6px;`}>{item.tag}</span>
            <h3 style="font-size:1.1rem; font-weight:700; color:#f1f5f9; margin-bottom:8px; letter-spacing:-0.02em;">{item.title}</h3>
            <p style="font-size:0.9rem; color:#64748b; line-height:1.65;">{item.desc}</p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Connect CTA -->
  <section style="max-width:1100px; margin:0 auto; padding:0 24px 100px;">
    <div style="text-align:center; padding:64px 40px; background:rgba(34,211,238,0.03); border:1px solid rgba(34,211,238,0.1); border-radius:24px; position:relative; overflow:hidden;">
      <div style="position:absolute; top:50%; left:50%; transform:translate(-50%,-50%); width:400px; height:200px; background:radial-gradient(ellipse, rgba(34,211,238,0.06) 0%, transparent 70%); pointer-events:none;"></div>
      <h2 style="font-size:2rem; font-weight:800; letter-spacing:-0.03em; color:#f1f5f9; margin-bottom:12px;">Let's build something.</h2>
      <p style="color:#64748b; margin-bottom:32px; font-size:1rem;">Open to interesting projects, collaborations, and conversations.</p>
      <div style="display:flex; gap:16px; justify-content:center; flex-wrap:wrap;">
        <a href="https://github.com/SeMmyT" target="_blank" rel="noopener"
           style="padding:12px 28px; background:#22d3ee; color:#080810; border-radius:10px; font-weight:700; text-decoration:none; font-size:0.95rem; transition:all 0.2s;"
           onmouseover="this.style.background='#67e8f9'; this.style.transform='translateY(-1px)'"
           onmouseout="this.style.background='#22d3ee'; this.style.transform='translateY(0)'">
          GitHub
        </a>
        <a href="https://www.linkedin.com/in/daniel-signalhire/" target="_blank" rel="noopener"
           style="padding:12px 28px; border:1px solid rgba(255,255,255,0.1); color:#94a3b8; border-radius:10px; font-weight:600; text-decoration:none; font-size:0.95rem; transition:all 0.2s;"
           onmouseover="this.style.borderColor='rgba(34,211,238,0.4)'; this.style.color='#22d3ee'; this.style.transform='translateY(-1px)'"
           onmouseout="this.style.borderColor='rgba(255,255,255,0.1)'; this.style.color='#94a3b8'; this.style.transform='translateY(0)'">
          LinkedIn
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
