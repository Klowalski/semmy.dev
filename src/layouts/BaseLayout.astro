---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Daniel Petrushevsky (SeMmy) — Day sales, night tools builder',
  description = 'Personal website of Daniel Petrushevsky (SeMmy) — software developer, AI tools builder, ex-Dota player from Kyiv, Ukraine.'
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-950 text-gray-100 min-h-screen">
    <nav class="border-b border-gray-800">
      <div class="max-w-6xl mx-auto px-6 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="text-xl font-bold hover:text-cyan-400 transition-colors">
            SeMmy
          </a>
          <div class="flex gap-6">
            <a href="/#projects" class="hover:text-cyan-400 transition-colors">Projects</a>
            <a href="/blog" class="hover:text-cyan-400 transition-colors">Blog</a>
            <a href="/about" class="hover:text-cyan-400 transition-colors">About</a>
          </div>
        </div>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer class="border-t border-gray-800 mt-20">
      <div class="max-w-6xl mx-auto px-6 py-8">
        <div class="flex justify-between items-center text-gray-400 text-sm">
          <p>© 2026 Daniel Petrushevsky</p>
          <div class="flex gap-4">
            <a href="https://github.com/SeMmyT" target="_blank" rel="noopener noreferrer" class="hover:text-cyan-400 transition-colors">
              GitHub
            </a>
            <a href="https://www.linkedin.com/in/daniel-signalhire/" target="_blank" rel="noopener noreferrer" class="hover:text-cyan-400 transition-colors">
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
